{% extends 'base.html.twig' %}

{% block title %}Listes des centres de formation{% endblock %}

{% block body %}


    <h1>Listes des centres de formation</h1>

    
    {% if is_granted('ROLE_ADMIN') %} {# Si je suis admin #}
        <div class="btn-add">
            <a href="{{ path ('new_formation')}}" class="btn btn-success">Ajouter une formation</a>
        </div>
    {% endif %}

    <div class="lists">
        {% for formation in formations %}
        <div class="list">
            <h3><a href="{{ path('show_formation', {'id': formation.id}) }}" class="link-formation">{{formation }}</a></h3>
            
            {% if is_granted('ROLE_ADMIN') %} {# Si je suis admin #}
                <div class="btn">
                    <a class="btn btn-warning" href="{{ path('edit_formation', {'id': formation.id}) }}">Modifier</a>
                    <a class="btn btn-danger" href="{{ path('delete_formation', {'id': formation.id}) }}">Supprimer</a>
                </div>
            {% endif %}
        </div>

        {% endfor %}
    </div>

{% endblock %}